<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    tools:context=".EditarShirtActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titulo_agregar"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        android:typeface="sans"
        android:layout_gravity="center_horizontal" />
    <EditText
        android:id="@+id/txtDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Descripcion"
        android:layout_span="2"/>

    <EditText
        android:id="@+id/txtPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Precio" />

    <EditText
        android:id="@+id/txtStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Cant. Stock" />

     <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/color" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">
        <RadioButton android:id="@+id/radioNoSeteado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/noseteado"
            android:onClick="clickRadioButton"
            android:checked="false" />
        <RadioButton android:id="@+id/radioRojo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rojo"
            android:onClick="clickRadioButton"
            android:checked="false" />
        <RadioButton android:id="@+id/radioAzul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/azul"
            android:onClick="clickRadioButton"
            android:checked="false" />
        <RadioButton android:id="@+id/radioVerde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/verde"
            android:onClick="clickRadioButton"
            android:checked="false" />
    </RadioGroup>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/guardar"
        android:layout_span="2"
        android:width="50dp"
        android:onClick="guardarAgregar"
      />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/volver"
        android:layout_span="2"
        android:width="50dp"
        android:onClick="volverAgregar"/>
</LinearLayout><!-- From: file:/Users/sebahc/Developer/Workspace-ifes/ClothingStore2/app/src/main/res/layout/activity_agregar_camisas.xml -->