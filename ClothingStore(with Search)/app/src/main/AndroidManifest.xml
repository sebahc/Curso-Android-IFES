<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.clothingstore"
    android:versionCode="1"
    android:versionName="1.0" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AgregarCamisas"
            android:label="@string/title_activity_nueva_shirt"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".EditarCamisas"
            android:label="@string/title_activity_editar_shirt" >
        </activity>
        <activity
            android:name=".ListadoActivity"
            android:label="@string/title_activity_listado"
            android:launchMode="singleTop" >

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>
    </application>

</manifest>
